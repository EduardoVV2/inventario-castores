@page
@model Rush_Rh.Pages.Nominas
@{
    Layout = "_LayoutUsuarioRH";
    ViewData["Title"] = "Nominas";
}

@section Styles{
    <link rel="stylesheet" href="~/css/nominas.css">
}

@{
    <div class="contenido">
        <div class="SeccionTituloNomina">
            <h1>Sistema RRHH / Nóminas:</h1>
            <div class="buscadorContainer">
                <input type="text" class="buscador" id="filtroInput" placeholder="Buscar">
            </div>
        </div>

        <div class="SeccionTablaNominas">
            <table width="100%" align="center" id="tablaElementos">
                <thead>
                    <tr>
                        <th width="60%" align="center">Usuario</th>
                        <th width="20%" align="center">Nóminas</th>
                        <th width="20%" align="center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.usuarios){
                        <tr>
                            <td align="center">@usuario.Nombre</td>
                            <td align="center">
                                <div>
                                    <form method="get">
                                        <input type="hidden" name="usuario" value="@usuario.Id" />
                                        <button type="submit" class="botonNominas"> Ver Nóminas</button>
                                    </form>
                                </div>
                            </td>

                            <td align="center">
                                <div>
                                    <button class="botonNominas btnAbrirModal"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#ModalNominas" 
                                            data-user-id="@usuario.Id" >
                                        Subir Nómina
                                    </button>                                  
                                </div>
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
        
        <!-- Modal para subir nominas -->
        <div class="modalSubirNominas">
            <div class="modal fade" id="ModalNominas" aria-hidden="true" aria-labelledby="ModalNominas" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header TituloModalSubirNominas">
                            <h1 class="modal-title fs-5" id="ModalNominas">Subir Nóminas</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="post" asp-page-handler="GuardarNomina" enctype="multipart/form-data">
                            <div class="modal-body selectModal">
                                <input type="hidden" id="idUsuario" name="infoNominas.IdUsuario">
                                <label for="meses">Mes</label>
                                <select name="infoNominas.IdMes" id="mes" required>
                                    <option value="" disabled selected></option>
                                    @foreach(var mes in Model.meses){
                                        <option value="@mes.Id">@mes.Nombre</option>
                                    }
                                </select>
                            
                                <label for="años">Año</label>
                                <select name="infoNominas.Año" id="año" required>
                                    <option value="" disabled selected></option>
                                    @foreach(var año in Model.años){
                                        <option value="@año">@año</option>
                                    }
                                </select>
                                <label for="fileInput">Selecciona un archivo:</label>
                                <input type="file" id="file-upload" name="doc.Documento" required/>
                            </div>
                            <div class="contenedorBotonSubirNomina">
                                <button class="botonSubirNomina" data-bs-target="#ModalNominas" data-bs-toggle="modal">Guardar</button>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal para ver nominas -->
        <div class="modalNominas ">
            <div class="modal fade" id="ModalVerNominas" aria-hidden="true" aria-labelledby="ModalVerNominasLabel" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header tituloTablaNominas">
                            <h1 class="modal-title fs-5" id="ModalVerNominasLabel">Lista Nóminas</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="tablaModalNominas scrollable-content">

                            <table width="100%" align="center" id="TablaVerNominas" >
                                <thead>
                                    <tr>
                                        <th width="25%">Mes</th>
                                        <th width="25%">Año</th>
                                        <th width="25%">Eliminar</th>   
                                        <th width="25%">Documento</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var nomina in Model.nominas)
                                    {
                                        <tr>
                                            <td align="center">@nomina.Mes</td>
                                            <td align="center">@nomina.Año</td>
                                            <td align="center">
                                                <form method="post" asp-page-handler="EliminarNominas">
                                                    <input type="hidden" name="id" value="@nomina.Id" asp-route-id="@nomina.Id"/>
                                                    <input type="hidden" name="url" value="@nomina.URL" asp-route-id="@nomina.URL"/>
                                                    <button type="button" class="btn-no-color btn-eliminar">
                                                        <span class="material-symbols-outlined">delete</span>
                                                    </button>
                                                </form>
                                            </td>
                                            <td align="center"><b><a href="@nomina.URL" target="_blank">Ver Nómina</a></b></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                        <div class="pagination">
                            <button id="prevPage" disabled>Anterior</button>
                            <span id="currentPage">1</span>
                            <button id="nextPage">Siguiente</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        
    </div>

}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Modal Ver Nóminas
            const modalVerNominas = document.getElementById('ModalVerNominas');
            if (modalVerNominas) {
                modalVerNominas.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget; // Botón que abrió el modal
                    if (button) {
                        const userId = button.getAttribute('data-user-id'); // Extraer el ID del usuario
                        const inputIdUsuario = modalVerNominas.querySelector('#idUsuario'); // Campo oculto en el modal
                        if (inputIdUsuario) {
                            inputIdUsuario.value = userId; // Asignar el valor
                        }
                    }
                });
            }

            // Modal Subir Nóminas
            const modalSubirNominas = document.getElementById('ModalNominas');
            if (modalSubirNominas) {
                modalSubirNominas.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget; // Botón que abrió el modal
                    if (button) {
                        const userId = button.getAttribute('data-user-id'); // Extraer el ID del usuario
                        const inputIdUsuario = modalSubirNominas.querySelector('#idUsuario'); // Campo oculto en el modal
                        if (inputIdUsuario) {
                            inputIdUsuario.value = userId; // Asignar el valor
                        }
                    }
                });
            }

            // Alertas
            const message = '@Html.Raw(TempData["Message"])';
            const messageType = '@TempData["MessageType"]';
            const messageTitle = '@Html.Raw(TempData["MessageTitle"])';
            if (message) {
                Swal.fire({
                    title: messageTitle,
                    text: message,
                    icon: messageType,
                    confirmButtonText: "Aceptar"
                });
            }

            // Abrir modal automáticamente si el usuario está presente en la query string
            @if (Request.Query.ContainsKey("usuario"))
            {
                <text>
                const autoOpenModal = new bootstrap.Modal(document.getElementById('ModalVerNominas'));
                autoOpenModal.show();
                </text>
            }

            // Selecciona todos los botones de eliminación
            const botonesEliminar = document.querySelectorAll(".btn-eliminar");

            botonesEliminar.forEach((boton) => {
                boton.addEventListener("click", function (event) {
                    // Evita que el formulario se envíe automáticamente
                    event.preventDefault();

                    // Obtén el formulario relacionado con este botón
                    const form = boton.closest("form");

                    // Muestra la alerta de confirmación
                    Swal.fire({
                        title: "¿Estás seguro?",
                        text: "Esta acción eliminará el dato de forma permanente.",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonText: "Sí, eliminar",
                        cancelButtonText: "Cancelar",
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Si el usuario confirma, envía el formulario
                            form.submit();
                        }
                    });
                });
            });
        });

        // Evento para escuchar cuando se escribe en el campo de búsqueda
        document.getElementById('filtroInput').addEventListener('keyup', function() {
            // Obtenemos el valor ingresado en el input y lo normalizamos
            var input = document.getElementById('filtroInput').value.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");

            // Obtenemos la tabla y sus filas
            var tabla = document.getElementById('tablaElementos');
            var filas = tabla.getElementsByTagName('tr');

            // Recorremos las filas de la tabla, comenzando en 1 para evitar el encabezado
            for (var i = 1; i < filas.length; i++) {
                var celdas = filas[i].getElementsByTagName('td');
                var muestraFila = false;

                // Comprobamos si alguna de las celdas contiene el texto de búsqueda
                for (var j = 0; j < celdas.length; j++) {
                    // Normalizamos el texto de las celdas antes de compararlo
                    var textoCelda = celdas[j].innerText.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
                    if (textoCelda.indexOf(input) > -1) {
                        muestraFila = true; // Si encuentra coincidencias, mostramos la fila
                        break;
                    }
                }

                // Si hay coincidencias, mostramos la fila, de lo contrario la ocultamos
                if (muestraFila) {
                    filas[i].style.display = ''; // Muestra la fila
                } else {
                    filas[i].style.display = 'none'; // Oculta la fila
                }
            }
        });

        // Configuración inicial
        const rowsPerPage = 4; // Número de filas por página
        const table = document.getElementById("TablaVerNominas");
        const tbody = table.querySelector("tbody");
        const rows = Array.from(tbody.rows); // Convierte las filas en un array
        const totalPages = Math.ceil(rows.length / rowsPerPage);

        let currentPage = 1;

        function showPage(page) {
            const start = (page - 1) * rowsPerPage;
            const end = start + rowsPerPage;

            rows.forEach((row, index) => {
                row.style.display = index >= start && index < end ? "" : "none";
            });

            document.getElementById("currentPage").textContent = page;
            document.getElementById("prevPage").disabled = page === 1;
            document.getElementById("nextPage").disabled = page === totalPages;
        }

        document.getElementById("prevPage").addEventListener("click", () => {
            if (currentPage > 1) {
                currentPage--;
                showPage(currentPage);
            }
        });

        document.getElementById("nextPage").addEventListener("click", () => {
            if (currentPage < totalPages) {
                currentPage++;
                showPage(currentPage);
            }
        });

        // Muestra la primera página al cargar
        showPage(currentPage);

    </script>
}